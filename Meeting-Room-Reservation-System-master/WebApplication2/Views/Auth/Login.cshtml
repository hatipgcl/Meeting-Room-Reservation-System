@using Entity.DTO;
@model UserForLoginDto
@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>@ViewData["Title"]</h2>

<div>
    <form asp-controller="Auth" asp-action="Login" method="post">
        <div>
            <label for="userForLoginDto_email">E-posta:</label>
            <input type="email" id="userForLoginDto_email" name="userForLoginDto.email" required />
        </div>
        <div>
            <label for="userForLoginDto_password">Şifre:</label>
            <input type="password" id="userForLoginDto_password" name="userForLoginDto.password" required />
        </div>
        <div>
            <button type="submit">Giriş Yap</button>
        </div>
    </form>
</div>
