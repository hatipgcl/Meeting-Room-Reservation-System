@model List<Entity.MeetingRequest>

<h2>Toplantı İstekleri</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Toplantı Adı</th>
                <th>Toplantı Tarihi</th>
                <th>Toplantı Yeri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.MeetingRequestId</td>
                    <td>@request.MeetingDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@request.RoomId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz toplantı isteği bulunmuyor.</p>
}

